<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="Element Monitor List">
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <Content type="html">
<![CDATA[ 

<html lang="en">
	<head>
		#includeResources(jquery)

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		<title>Current Status</title>

		<link rel="stylesheet" type="text/css" href="__UPTIME_GADGET_BASE__/elementMonitorList.css" />

		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/jquery.dataTables.min.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeApi.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeElementStatusSimpleTableChart.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptime.CommonFunctions.js"></script>		
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/elementMonitorList.js"></script>		
	</head>
	<body>
		<div id="widgetSettings">
			Select Element:
			<form id="widgetOptions">
				<div id="availableElements"></div>
				Monitor info to display:
				<br/>
				<input type="checkbox" checked id="lastCheckTime" name="columnOptions" value="lastCheckTime"> Last Check Time
				<br/>
				<input type="checkbox" checked id="lastTransitionTime" name="columnOptions" value="lastTransitionTime"> Duration
				<br/>
				<input type="checkbox"  id="message" name="columnOptions" value="message"> Monitor Message
				<br/>
				<input type="checkbox"  id="isAcknowledged" name="columnOptions" value="isAcknowledged"> Is Acknowledged
				<br/>
				<input type="checkbox"  id="acknowledgedComment" name="columnOptions" value="acknowledgedComment"> Acknowledgement Comment
				<br/>
				<br/>
				Refresh Rate:
				<input type="text" checked id="refreshRate" name="refreshRate" value="15"> seconds
				<br/><br/>
				<input id="saveSettings" type="button" value="Save"/>
				<input id="cancelSettings" type="button" value="Cancel"/>
			</form>
			<br/><span style="float:right">v1.0</span><br/>
		</div>

		<div id = "widgetChart" style="border:1px solid;">
			<table id='headerTable' style='width:100%; border:0px;'></table>
			<table id='statusTable' style='width:100%; border:0px;'></table>
			<table id='topologyTable' style='width:100%; border:0px;'></table>
		</div>
		<div id="statusBar" style="display:none; width:100%; font-weight:bold;font-size:larger; ">Backend Call Status</div>
	</body>
</html>

]]>
  </Content> 
</Module>
